<nav class="navbar d-flex align-items-center px-3 mb-3">
  <h1 class="col-2-md mt-2 ms-2 text-warning fw-bold">Edit list</span></h1>
  <p class="flex-grow-1"></p>
  <%= link_to "Back", list_path(@list), class: "button-rounded bg-primary" %>
</nav>

<div class="container w-50 mt-4">
  <%= simple_form_for @list, method: :patch do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, "Update", class: "button-rounded bg-success" %>
  <% end %>
</div>
